<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_account_header_height_compact"

    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_account_header_acount_photo_id"
        android:layout_width="@dimen/drawer_account_header_compact"
        android:layout_height="@dimen/drawer_account_header_compact"
        android:layout_marginBottom="@dimen/drawer_padding"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="@dimen/drawer_vertical_padding"
        android:layout_alignParentBottom="true"

        android:elevation="2dp"
        tools:background="@color/white"/>

    <TextView
        android:id="@+id/drawer_header_group_switcher_text_view_id"
        android:layout_width="@dimen/drawer_account_header_dropdown"
        android:layout_height="@dimen/drawer_account_header_dropdown"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/drawer_account_header_dropdown_padding"
        android:layout_marginRight="@dimen/drawer_vertical_padding"

        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/drawer_header_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/drawer_account_header_acount_photo_id"
        android:layout_toRightOf="@+id/drawer_account_header_acount_photo_id"
        android:layout_marginTop="@dimen/drawer_padding"
        android:layout_marginBottom="@dimen/drawer_padding"
        android:layout_marginLeft="@dimen/drawer_vertical_padding"

        android:fontFamily="sans-serif-medium"
        android:lines="1"
        android:maxLines="1"
        android:textSize="@dimen/text_small"
        android:textColor="@color/white"
        tools:text="name"/>

    <TextView
        android:id="@+id/drawer_header_email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawer_header_name_id"
        android:layout_alignLeft="@+id/drawer_header_name_id"

        android:fontFamily="sans-serif"
        android:lines="1"
        android:maxLines="1"
        android:textSize="@dimen/text_small"
        android:textColor="@color/white"
        tools:text="email"/>

</RelativeLayout>