<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_expense_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.expensemanager.app.expense.NewExpenseActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/new_expense_activity_new_expense_text_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/space_medium"

        android:text="@string/new_expense"
        android:textSize="@dimen/text_medium"/>

    <!-- Amount -->
    <EditText
        android:id="@+id/new_expense_activity_amount_text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_expense_activity_new_expense_text_view_id"
        android:layout_margin="@dimen/space_medium"

        android:padding="@dimen/space_really_small"
        android:hint="@string/enter_amount"/>

    <!-- Note -->
    <EditText
        android:id="@+id/new_expense_activity_note_text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_expense_activity_amount_text_view_id"
        android:layout_margin="@dimen/space_medium"

        android:padding="@dimen/space_really_small"
        android:hint="@string/enter_note"/>

    <!-- Save -->
    <Button
        android:id="@+id/new_expense_activity_save_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_expense_activity_note_text_view_id"
        android:layout_margin="@dimen/space_medium"

        android:text="@string/save"/>

</RelativeLayout>
