<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_expense_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.expensemanager.app.expense.NewExpenseActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/new_expense_activity_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"

        android:background="?attr/colorPrimary"
        android:elevation="2dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/new_expense_activity_toolbar_close_image_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                android:src="@drawable/ic_close_white_24dp"/>

            <TextView
                android:id="@+id/new_expense_activity_toolbar_title_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/new_expense_activity_toolbar_close_image_view_id"
                android:layout_toEndOf="@+id/new_expense_activity_toolbar_close_image_view_id"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_really_large"
                android:layout_marginStart="@dimen/space_really_large"

                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_small"/>

            <TextView
                android:id="@+id/new_expense_activity_toolbar_post_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_medium_large"
                android:layout_marginEnd="@dimen/space_medium_large"

                android:text="@string/post"
                android:textColor="@color/white"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <!-- Amount -->
    <EditText
        android:id="@+id/new_expense_activity_amount_text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_expense_activity_toolbar_id"
        android:layout_margin="@dimen/space_medium"

        android:padding="@dimen/space_really_small"
        android:hint="@string/enter_amount"
        android:background="@drawable/background_round_corner_white"/>

    <!-- Note -->
    <EditText
        android:id="@+id/new_expense_activity_note_text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_expense_activity_amount_text_view_id"
        android:layout_margin="@dimen/space_medium"

        android:padding="@dimen/space_really_small"
        android:hint="@string/enter_note"
        android:background="@drawable/background_round_corner_white"/>

    <!-- Photo -->
    <ImageView
        android:id="@+id/new_expense_activity_add_photo_image_view_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/new_expense_activity_note_text_view_id"
        android:layout_margin="@dimen/space_medium"

        android:padding="@dimen/space_medium"
        android:src="@drawable/ic_camera_alt_white_24dp"
        android:tint="@color/gray"
        android:background="@drawable/background_round_corner_border_gray"/>

    <ProgressBar
        android:id="@+id/new_expense_activity_progress_bar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"/>

</RelativeLayout>
