<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    tools:context=".report.ReportDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/report_activity_pie_chart_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/chart_height"
                android:layout_margin="@dimen/space_medium_small"

                android:padding="@dimen/space_really_small"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/report_activity_recycler_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/report_activity_pie_chart_id"

                android:paddingTop="@dimen/space_really_small"
                android:paddingBottom="@dimen/space_really_small"/>

        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/report_activity_fab_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"

        android:src="@drawable/ic_add_white_24dp"/>

</RelativeLayout>
