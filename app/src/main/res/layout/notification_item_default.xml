<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_medium_small"
    android:layout_marginRight="@dimen/space_medium_small"
    android:layout_marginTop="@dimen/space_really_small"
    android:layout_marginBottom="@dimen/space_really_small"

    android:elevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title At-->
        <TextView
            android:id="@+id/notification_item_default_title_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_medium"

            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_small"
            tools:text="Title"/>

        <!-- Created At -->
        <TextView
            android:id="@+id/notification_item_default_created_at_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/space_medium"

            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_small"
            tools:text="createdAt"/>

        <!-- Check -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_item_default_check_image_view_id"
            android:layout_width="@dimen/notification_color_width_small"
            android:layout_height="@dimen/notification_color_width_small"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/notification_item_default_message_text_view_id"
            android:layout_marginRight="@dimen/space_medium"

            tools:background="@color/black"/>

        <!-- Message -->
        <TextView
            android:id="@+id/notification_item_default_message_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/notification_item_default_title_text_view_id"
            android:layout_toLeftOf="@+id/notification_item_default_check_image_view_id"
            android:layout_marginLeft="@dimen/space_medium"
            android:layout_marginRight="@dimen/space_medium"
            android:layout_marginBottom="@dimen/space_medium"

            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_small"
            android:gravity="center_vertical"
            tools:text="Message"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>