<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.expensemanager.app.profile.ProfileActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_id">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/profile_activity_card_view_id"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/space_medium"

                android:elevation="3dp">

                <ImageView
                    android:id="@+id/profile_activity_profile_photo_image_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/profile_activity_fullname_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profile_activity_card_view_id"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/space_medium"

                android:textSize="@dimen/text_medium_small"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
