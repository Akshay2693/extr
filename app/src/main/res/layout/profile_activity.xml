<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.expensemanager.app.profile.ProfileActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_id">

        <RelativeLayout
            android:id="@+id/profile_activity_user_info_relative_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/profile_activity_card_view_id"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/space_medium"

                android:elevation="3dp">

                <ImageView
                    android:id="@+id/profile_activity_profile_photo_image_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

            <!-- Name label -->
            <TextView
                android:id="@+id/profile_activity_fullname_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_activity_card_view_id"
                android:layout_alignTop="@+id/profile_activity_card_view_id"
                android:layout_marginLeft="@dimen/space_medium"
                android:layout_marginRight="@dimen/space_medium"
                android:layout_marginBottom="@dimen/space_really_small"

                android:paddingLeft="@dimen/space_really_small"
                android:paddingRight="@dimen/space_really_small"
                android:text="@string/name"
                android:textSize="@dimen/text_medium_small"/>

            <!-- Amount -->
            <EditText
                android:id="@+id/profile_activity_fullname_edit_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_activity_fullname_text_view_id"
                android:layout_alignLeft="@+id/profile_activity_fullname_text_view_id"
                android:layout_marginRight="@dimen/space_medium"

                android:padding="@dimen/space_really_small"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_small"
                android:background="@drawable/background_round_corner_white"/>

        </RelativeLayout>

        <!-- Action -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_activity_user_info_relative_layout_id"
            android:layout_marginTop="@dimen/space_medium"
            android:layout_marginLeft="@dimen/space_medium"
            android:layout_marginStart="@dimen/space_medium">

            <RelativeLayout
                android:id="@+id/profile_activity_edit_relative_layout_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <!-- Edit -->
                <Button
                    android:id="@+id/profile_activity_edit_button_id"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/space_medium"
                    android:layout_marginBottom="@dimen/space_medium"

                    android:text="@string/edit"
                    android:background="@drawable/background_round_corner_white"/>

                <!-- Cancel -->
                <Button
                    android:id="@+id/profile_activity_cancel_button_id"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/space_medium"
                    android:layout_marginBottom="@dimen/space_medium"

                    android:text="@string/cancel"
                    android:background="@drawable/background_round_corner_white"/>

            </RelativeLayout>

            <!-- Save -->
            <Button
                android:id="@+id/profile_activity_save_button_id"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/profile_activity_edit_relative_layout_id"
                android:layout_toEndOf="@+id/profile_activity_edit_relative_layout_id"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/space_medium"


                android:text="@string/save"
                android:background="@drawable/background_round_corner_white"/>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/profile_activity_progress_bar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:visibility="gone"
            style="?android:attr/progressBarStyleLarge"/>

    </RelativeLayout>

</RelativeLayout>
